@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="/Views/Component/_Slider.cshtml" />

<partial name="/Views/Component/_Category.cshtml" />

<partial name="/Views/Component/_Popular.cshtml" />

<div class="job_listing_area" ng-controller="homeController">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <div class="section_title">
                    <h3>Danh sách công việc (mới)</h3>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="brouse_job text-right">
                    <a href="/JobDescription/Index" class="boxed-btn4">Xem thêm</a>
                </div>
            </div>
        </div>
        <div class="job_lists">
            <div class="row">
                <div class="col-lg-12 col-md-12" ng-repeat="item in listJobNew">
                    <div class="single_jobs white-bg d-flex justify-content-between" style="padding:15px 25px 5px 25px">
                        <div class="row" style="width:100%">
                            <div class="col-md-9 col-lg-9">
                                <div class="jobs_left d-flex align-items-center">
                                    <div class="thumb" style="height:135px;width:160px;margin-bottom:12px">
                                        <img src="~/img/hunting job.png" style="width:100%" alt="">
                                    </div>
                                    <div class="jobs_conetent">
                                        <a href="job_details.html"><h5 style="font-size:26px;font-weight:400;color:black">{{item.title}}</h5></a>
                                        <div class="links_locat d-flex align-items-center">
                                            <div class="location">
                                                <p style="color:red;font-size:15px"> <i class="fa fa-money"></i>{{item.offerFrom}} - {{item.offerTo}}$</p>
                                            </div>
                                            <div class="location">
                                                <p style="color:black;font-size:14px"> <i class="fa fa-clock-o"></i>{{item.type|typeFilter:item.type}}</p>
                                            </div>
                                        </div>
                                        <p style="margin-bottom:8px;color:black;font-size:14px;padding-left:40px;font-weight:500" ng-bind-html="item.endow"></p>
                                        <p style="
                                                    color: #808080;
                                                    list-style: none;
                                                    width: 500px;
                                                    overflow: hidden;
                                                    text-overflow: ellipsis;
                                                    line-height: 20px;
                                                    -webkit-line-clamp: 3;
                                                    height: 60px;
                                                    display: -webkit-box;
                                                    -webkit-box-orient: vertical;
                                                    " ng-bind-html="item.description"></p>
                                        <ul style="display:flex;margin-bottom:5px">
                                            <li style="list-style:none"><a class="btn btn-outline-success" style="width:74px;font-size:13px;height:30px" href="#">ASP.NET</a></li>
                                            <li style="list-style:none"><a class="btn btn-outline-success" style="width:74px;font-size:13px;height:30px" href="#">PHP</a></li>
                                            <li style="list-style:none"><a class="btn btn-outline-success" style="width:74px;font-size:13px;height:30px" href="#">Angular</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-3">
                                <div class="jobs_right" style="padding-left:10px;margin-top:40px;margin-left:40px">
                                    <div class="apply_now">
                                        <a class="heart_mark" href="#"> <i class="ti-heart"></i> </a>
                                        <a href="job_details.html" class="boxed-btn3">Ứng tuyển</a>
                                    </div>
                                    <div class="date" style="text-align:left">
                                        <p style="color:black">Thời hạn: {{item.timeEnd|dateFilter:item.timeEnd}}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    li {
        list-style: outside;
    }
</style>