                    <label>Trình độ</label>
                    <input type="text" class="form-control" ng-model="education.Title" value="">
                </div>
                <div class="form-group col-md-3 select-border">
                    <label>Từ năm</label>
                    <select ng-model="education._From" class="form-control basic-select">
                        <option value=2020 selected="selected">2020</option>
