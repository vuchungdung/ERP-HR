<div class="user-dashboard-info-box" ng-controller="educationController">
    <div class="dashboard-resume-title d-flex align-items-center">
        <div class="section-title-02 mb-sm-0">
            <h4 class="mb-0">Trình độ học vấn</h4>
        </div>
        <a class="btn btn-md ml-sm-auto btn-primary" data-toggle="collapse" href="#dateposted" role="button" aria-expanded="false" aria-controls="dateposted">Thêm thông tin</a>
    </div>
    <div class="collapse show" id="dateposted">
        <div class="bg-light p-3 mt-4">
            <form class="form-row" ng-submit="create()">
