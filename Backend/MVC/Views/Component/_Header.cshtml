@using Microsoft.AspNetCore.Http;
@using MVC.Common;
@using Newtonsoft.Json;


<header class="header bg-dark">
    <nav class="navbar navbar-static-top navbar-expand-lg header-sticky">
        <div class="container-fluid">
            <button id="nav-icon4" type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <a class="navbar-brand" href="/Home/Index">
                <img class="img-fluid" src="~/images/logo.svg" alt="logo">
            </a>
            <div class="navbar-collapse collapse justify-content-start">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" style="font-size:12px" href="/Home/Index">Trang chủ</a>
                    </li>
                    <li class="dropdown nav-item">
                        <a href="/JobDescription/Items" style="font-size:12px" class="nav-link">Danh sách công việc</a>
                    </li>
                </ul>
            </div>
            <div class="add-listing">
                @{ var session = Convert.ToString(Context.Session.GetString(CommonSession.USER_SESSION));
                    if (session == null)
                    {
                        <div class="login d-inline-block mr-4">
                            <a href="" data-toggle="modal" data-target="#exampleModalCenter"><i class="far fa-user pr-2"></i>Đăng nhập / Đăng ký</a>
                        </div>
                    }
                    else
                    {
                        var user = JsonConvert.DeserializeObject<UserSession>(session);
                        {
                            <div class="login d-inline-block mr-4">
                                <ul class="nav navbar-nav">
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle" style="font-size:13px;" href="javascript:void(0)" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="far fa-user pr-2"></i>@user.Username <i class="fas fa-chevron-down fa-xs"></i>
                                        </a>
                                        <ul class="dropdown-menu" style="width:120px;" ng-controller="cadidateController">
                                            <li style="padding-left:5px"><a class="dropdown-item" style="font-size:12px;color:black" href="/Candidate/Info">Thông tin cá nhân</a></li>
                                            <li style="padding-left:5px"><a class="dropdown-item" style="font-size:12px;color:black" href="" ng-click="logOut()">Đăng xuất</a></li>
                                        </ul>
                                    </li>
                                </ul>                            
                            </div>
                            
                        }
                    }
                }
            </div>
        </div>
    </nav>
</header>